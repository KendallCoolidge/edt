<project name="PrepareForPII" default="main" basedir=".">
		
	<!-- Setup temp variables -->
	<target name="init">
		<property name="plugin" value="com.ibm.etools.egl.rui.deploy.j2ee"/>
		<property name="plugindir" value="${workspaceDir}/${plugin}"/>
		<property name="outputDir" value="${nlsDir}/${plugin}"/>
	</target>

	<!-- Create the destination dir -->
	<target name="createOutputDir" depends="init">
		<delete dir="${outputDir}"/>
		<mkdir dir="${outputDir}"/>
	</target>

	<target name="main" depends="createOutputDir">
		<copy todir = "${outputDir}/src" >
			 <fileset dir="${plugindir}/src">
           	  <include name="com/ibm/etools/egl/rui/deploy/j2ee/internal/nls/messages.properties"/>
  			 </fileset>
  		</copy>
	</target>
</project>