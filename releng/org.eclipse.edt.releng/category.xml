<?xml version="1.0" encoding="UTF-8"?>
<site pack200="true">
	<!--
	This template will expand any embedded Ant properties using <expandproperties/>.
	
	Rename this file to category.xml for Athena to notice it and use it instead of generating 
	a default site.xml with all features shown in a single category.

 
	For any feature id="org.eclipse.foo", set version="${org.eclipse.foo.version}" and
		url="features/org.eclipse.foo_${org.eclipse.foo.version}"
 
	if "${buildAlias}" == "${buildID}"
		${category.name} == "${zipPrefix} ${version} ${buildID}"
	else	
		${category.name} == "${zipPrefix} ${buildAlias} ${buildID}"
	-->
 
        <!-- ${category.name} -->
        <category-def label="EGL Development Tools (EDT) ${version}" name="${category.name}">
                <description>
${category.label}: contains all features in this build.
                </description>
        </category-def>
 
        <feature id="org.eclipse.edt.feature" version="${org.eclipse.edt.feature.version}" url="features/org.eclipse.edt.feature_${org.eclipse.edt.feature.version}.jar" patch="false">
                <category name="${category.name}"/>
        </feature>
 
        <feature id="org.eclipse.edt.source" version="${org.eclipse.edt.source.version}" url="features/org.eclipse.edt.source_${org.eclipse.edt.source.version}.jar" patch="false">
                <category name="${category.name}"/>
        </feature>
</site>