package utils.theme;

// basic library
library ThemeLib
	
	currentTheme string = "claro";

	globalTheme DojoTheme {theme = currentTheme};
	
	/*
	 * Tell Dojo what them to use. Supported values are "tundra", "soria", and "nihilo"
	 */
	function setTheme(theme string in)
		currentTheme = theme;
		globalTheme.theme = currentTheme;
	end
	
end
