package eglx.ui.rui;

Record RUIHandler type Annotation {
	targets = [ElementKind.handlerPart],
	@Stereotype{defaultSuperType=View}
}
	onConstructionFunction FunctionMemberRef;
	includeFile String;
	cssFile String;
	title String;
	theme String; //TODO the initial value is "claro"
end

Record RUIWidget type Annotation {
	targets = [ElementKind.handlerPart],
	@Stereotype{defaultSuperType=Widget}
}
	tagName String;
	onConstructionFunction FunctionMemberRef;
	includeFile String;
	cssFile String;
end

Record RUIPropertiesLibrary type Annotation
{
	targets = [ElementKind.libraryPart],
	@Stereotype{defaultSuperType=NLSLibrary},
	validationProxy = "org.eclipse.edt.compiler.binding.annotationType.RUIPropertiesLibraryAnnotationProxy"
}
	propertiesFile String;
end