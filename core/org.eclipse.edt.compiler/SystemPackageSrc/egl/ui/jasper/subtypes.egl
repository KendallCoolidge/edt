package egl.ui.jasper;

import egl.lang.FunctionDeclaration;

Record JasperReport type Annotation
{
	targets = [ElementKind.HandlerPart],
	@Stereotype {
		stereotypeContexts = []
	},
	implicitFunctions = [
		@FunctionDeclaration {
			functionName = "getReportParameter",
			parameterTypes = [string.type],
			modifiers = ["inModifier"],
			returnType = any.type
		},
		
		@FunctionDeclaration {
			functionName = "setReportVariableValue",
			parameterTypes = [string.type, any.type],
			modifiers = ["inModifier", "inModifier"]
			
		},
		
		@FunctionDeclaration {
			functionName = "getReportVariableValue",
			parameterTypes = [string.type],
			modifiers = ["inModifier"],
			returnType = any.type
		},
		
		@FunctionDeclaration {
			functionName = "getFieldValue",
			parameterTypes = [string.type],
			modifiers = ["inModifier"],
			returnType = any.type
		},
		
		@FunctionDeclaration {
			functionName = "addReportData",
			parameterTypes = [ReportData, string.type],
			modifiers = ["inoutModifier", "inModifier"]
		},
		
		@FunctionDeclaration {
			functionName = "getReportData",
			parameterTypes = [string.type],
			modifiers = ["inModifier"],
			returnType = ReportData
		}
	],
	eglIsSystemAnnotation = yes
}
end

