package dojo.mobile.widgets;

import eglx.javascript.JavaScriptObject;
import eglx.lang.ExternalName;
import eglx.ui.rui.FilterKind;
import eglx.ui.rui.VEContainer;
import eglx.ui.rui.VEProperty;
import eglx.ui.rui.VEWidget;          
         
ExternalType DojoMobileView extends DojoMobileContainer type JavaScriptObject { 
		relativePath = "dojo/mobile/widgets", 
		ExternalName = "DojoMobileView",       
		@VEWidget{            
			category = "Mobile",   
			template = "${typeName}{\n" +  
						"\t\tselected = true, headerTitle = \"My View\",\n" + 
						"\t\t/*backText = \"Back\", backView = */\n" + 
						"\t\tchildren = [\n" + 
						"\t\t]\n\t}",  
			displayName = "View",     
			smallIcon = "icons/ctool16/mobile_view_pal16.gif",
			largeIcon = "icons/ctool24/mobile_view_pal24.gif",
			propertyFilterType  = FilterKind.EXCLUDEALLEXCEPT,
			propertyFilter = [],
			eventFilterType  = filterKind.excludeAll,
			container = @VEContainer{}
		}          
	}      
	      
	toolBar DojoMobileToolBarButton[]? {};  
	
	className string{   
		@Property{}//,  @VEProperty {displayName = "Class"}
		};   
	    
	headerTitle String { @Property{}, 
	@VEProperty{   
		displayName = "Head Title"	
	}}; 
	
	backText String { @Property{}, @VEProperty{
		displayName = "Back Text" 
	}};
	
	backView DojoMobileView { @Property{} };	
	
	//If true, the view is displayed at startup time.
	selected Boolean {@Property{},   
		@VEProperty{
			displayName = "Selected" 
		}   
	};
	
	//Specify a scrolling direction.
	scrollVertically Boolean{   
		@Property {},  
		@VEProperty { displayName = "Scroll Vertically" }
	}; 
	 
	scrollHorizontally Boolean{
		@Property {},   
		@VEProperty { displayName = "Scroll Horizontally" }
	};
	
	swappable Boolean{
		@Property {},  
		@VEProperty { displayName = "Swappable" }  
	};
end
