package dojo.widgets;

import eglx.javascript.JavaScriptObject;
import eglx.lang.Property;
 
/**
 * This is a widget to add tooltip for other widgets
 *
 * For more information on the Dojo widget itself, see http://docs.dojocampus.org/dijit/Tooltip
 *
 */
ExternalType DojoTooltip extends DojoBase type JavaScriptObject {
		relativePath = "dojo/widgets",
		externalName = "DojoTooltip"  
	}
			
	/**
	 * The IDs the tooltip should be attached to
	 */
	target string[] {@Property};
	
	/**
	 * Specify the label to use when drawing the button
	 */
	contents String {@Property };
	
	/**
	  * This specifies the prefered order, it's not guaranteed Dojo will position it this way
	 */
	defaultPosition string[] {@Property };
	
	/**
	  * The delay before the tooltip shows up
	  */
	delay int {@Property };
	
end