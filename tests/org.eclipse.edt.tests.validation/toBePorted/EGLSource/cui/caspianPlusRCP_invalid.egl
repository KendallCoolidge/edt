RECORD myFormType TYPE ConsoleForm { formsize=[10,55] }
	* ConsoleField { position=[2,5], value="Some Label" };
	
	someField ConsoleField {
		name="someField", position=[2,20], fieldLen=15,
		value="", inputRequired=no
	};
	
	someCheckbox ConsoleCheckbox {
		name = "someCheckbox",
		bounds=[8, 5, 20, 1],
		text="Check Me"
	};
	
	someButton ConsoleButton {
		name = "someButton",
		bounds=[8, 35, 20, 1],
		text="Push Me"
	};
end

Program pgm
	myForm myFormType;
	
	function main()
		fieldVar string;
		boolvar boolean;
		
		OPENUI myform.someField, myForm.someCheckbox, myForm.someButton, boolVar		//1
			BIND fieldvar, boolvar
			ONEVENT( BEFORE_FIELD : "someField" )										//0
			// do something
			
			ONEVENT( ConsoleCheckbox.STATE_CHANGED : "someCheckbox" )					//0
			// do something else
			
			ONEVENT( ConsoleButton.PUSHED : "someButton" )								//0
			// do yet something else
			
			ONEVENT( foo : "foo" )														//1 foo cannot be resolved
		END
	end
end
