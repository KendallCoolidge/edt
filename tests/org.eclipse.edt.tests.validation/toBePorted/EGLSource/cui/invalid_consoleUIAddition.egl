	{ formSize = [24, 80] }	// 0

	field1 ConsoleField { fieldLen = 1, name = "a", position=[1,1] };	// 1
	field2 ConsoleField { fieldLen = 1, name = "b", position=[1,1] };	// 0
	field3 ConsoleField { fieldLen = 1, name = "a", position=[1,1] };	// 1
End