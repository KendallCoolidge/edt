Program WORK_32

FUNCTION Main()

  i int;
  i = 1;

  WHILE ( -1 != 0 )
   CASE ( i )
    WHEN ( 1 )
     CONTINUE WHILE;
    OTHERWISE
     displayLineMode("hello, world");			//0
   END ;

  OpenUI activeForm.dummyField bind  i
    OnEvent(BEFORE_OPENUI)
      CASE ( i )
       WHEN  ( 0 )
         CONTINUE OpenUI;
       WHEN  ( 1 )
         displayAtPosition( "hello, world" , 6,1);	//0
     END
     	continue openui;
     
     OnEvent(AFTER_OPENUI)
     	displayAtPosition("...",1,1);				//0
     END
  END;
  
	while(1==1)
	  if(1==1)
	  	continue while;
	  else
	  	displayAtPosition("...",1,1);				//0
	  end
	end
	
	while(1==1)
	  try
	  	continue while;
	  onException
	  	displayAtPosition("...",1,1);				//0
	  end
	end

END 

