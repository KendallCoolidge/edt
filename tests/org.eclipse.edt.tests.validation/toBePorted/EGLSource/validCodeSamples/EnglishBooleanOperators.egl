//NO_ERROR

program EnglishBooleanOperators
	function main()

		writeStdout( "This program demonstrates the use of 'and' and 'or' in place" );
		writeStdout( "of '&&' and '||'." );
		writeStdout( "" );


		i int = 42;
		d decimal(9,5) = 9876.54321;
		
		if ( (i == 42 and d != 9876.54321)
			or (i == 42 and d == 9876.54321) )
			writeStdout( "OK" );
		else
			writeStdout( "Error!" );
		end
		
		if ( !(i == 42 and d == 9876.54321)
			or !(i == 42 and d != 9876.54321) )
			writeStdout( "OK" );
		else
			writeStdout( "Error!" );
		end
	end
end