end

Formgroup fg
	form form1 type textform {formSize=[20,20]}
		field1 num(5,3) {
			value = -1.56		//0
		};	
	end
	
	form form2 type textform {screensizes=[[24,80]], formSize=[20,20], position=[0,0]}
		field1 int {position=[0,0]};
	end
end

DataItem di1 char(20) end
DataItem di2 char(20) end
