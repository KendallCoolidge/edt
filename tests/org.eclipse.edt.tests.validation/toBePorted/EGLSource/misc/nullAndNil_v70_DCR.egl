Program pgm {I4GLItemsNullable=yes}
	function main()
		c1 char(4);
		c2 char(4)?;
		p prompt;
		thing any;
		
		if(c1 == null) end		//0
		if(c2 == null) end		//0
		if(p == null) end		//0
		if(thing as int? == null) end	//0
		
		c1 = null;				//0
		c2 = null;				//0
		p = null;				//0
		thing = null;			//0
		
		c1 = nil;		//1 nil cannot be resolved
	end
end
